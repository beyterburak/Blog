@model List<ArticleDto>

<div class="col-md-6">
    <div class="nk-widget">
        <h4 class="nk-widget-title"><span class="text-main-1">Popüler</span> Yazılar</h4>
        <div class="nk-widget-content">
            <div class="row vertical-gap sm-gap">

                @foreach (var item in Model)
                {
                    <div class="col-lg-6">
                        <div class="nk-widget-post-2">
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id" class="nk-post-image">
                                <img style="height:7em;width:8em" class="mb-3" src="~/images/@item.Image.FileName" alt="@item.Title">
                            </a>
                            <div class="nk-post-title"><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></div>
                            <div class="nk-post-date">
                                <span class="fa fa-calendar"></span> @item.CreatedDate.ToString("dd MMM yyyy")
                                <span class="fa fa-eye"></span>@item.ViewCount
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>