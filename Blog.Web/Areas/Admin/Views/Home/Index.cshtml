<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-lg-8 mb-4 order-0">
                <div class="card">
                    <div class="d-flex align-items-end row">
                        <div class="col-sm-7">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Hoş Geldin! 🎉</h5>
                                <p class="mb-4">
                                    Burası senin arayüzün, bazı istatistikleri buradan görebilirsin.
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-5 text-center text-sm-left">
                            <div class="card-body pb-0 px-0 px-md-4">
                                <img src="~/sneat/assets/img/illustrations/man-with-laptop-light.png"
                                     height="140"
                                     alt="View Badge User"
                                     data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                     data-app-light-img="illustrations/man-with-laptop-light.png" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 order-1">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <i style="font-size:2.25rem;" class="menu-icon bx bx-paper-plane"></i>
                                    </div>
                                </div>
                                <span class="fw-semibold d-block mb-1">Toplam Yayınlanan <br /> Makale Sayısı</span>
                                <h3 class="card-title mb-2" id="totalArticleCount"></h3>
                                <small class="text-success fw-semibold">@*<i class="bx bx-up-arrow-alt"></i>*@ </small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <i style="font-size:2.25rem;" class="menu-icon bx bx-category"></i>
                                    </div>
                                </div>
                                <span class="fw-semibold d-block mb-1">Toplam Eklenen <br /> Kategori Sayısı</span>
                                <h3 class="card-title mb-2" id="totalCategoryCount"></h3>
                                <small class="text-success fw-semibold">@*<i class="bx bx-up-arrow-alt"></i>*@</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Total Revenue -->
            <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
                <div class="card">
                    <div class="row row-bordered g-0">
                        <div class="col-md-12">
                            <h5 class="card-header m-0 me-2 pb-3">@DateTime.Now.Year Yılının Makale Yayınlama Analizi</h5>
                            <div id="customTotalRevenueChart" class="px-2"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/ Total Revenue -->
            <div class="col-12 col-md-8 col-lg-4 order-3 order-md-2">
                <div class="row">
                    <div class="col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <i style="font-size:2.25rem;" class="menu-icon bx bx-user"></i>
                                    </div>
                                </div>
                                <span class="fw-semibold d-block mb-1">Toplam Kayıtlı <br /> Kullanıcı Sayısı</span>
                                <h3 class="card-title mb-2" id="totalUserCount"></h3>
                                <small class="text-danger fw-semibold">@*<i class="bx bx-down-arrow-alt"></i> -14.82%*@</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title d-flex align-items-start justify-content-between">
                                    <div class="avatar flex-shrink-0">
                                        <i style="font-size:2.25rem;" class="menu-icon bx bx-user-check"></i>
                                    </div>
                                </div>
                                <span class="fw-semibold d-block mb-1">Toplam Makale Görüntülenme Sayısı</span>
                                <h3 class="card-title mb-2" id="totalViewCount"></h3>
                                <small class="text-success fw-semibold">@*<i class="bx bx-up-arrow-alt"></i> +28.14%*@</small>
                            </div>
                        </div>
                    </div>
                    <!-- </div>
                    <div class="row"> -->
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between flex-sm-row flex-column gap-3">
                                    <div class="d-flex flex-sm-column flex-row align-items-start justify-content-between">
                                        <div class="card-title">
                                            <h5 class="text-nowrap mb-2">Reklam Gelirleri</h5>
                                            <span class="badge bg-label-warning rounded-pill">@DateTime.Now.Year Yılı</span>
                                        </div>
                                        <div class="mt-sm-auto">
                                            <small class="text-success text-nowrap fw-semibold"><i class="bx bx-chevron-up"></i> ...%</small>
                                            <h3 class="mb-0">$...</h3>
                                        </div>
                                    </div>
                                    <div id="profileReportChart"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->

    <div class="content-backdrop fade"></div>
</div>

@section Scripts{
    <script src="~/js/dashboardIndex.js"></script>
    <script>
        var app = app || {}
        app.Urls = app.Urls || {}

        app.Urls.yearlyArticlesUrl = "@(Url.Action("YearlyArticleCounts", "Home"))";
        app.Urls.totalArticleCountUrl = "@(Url.Action("TotalArticleCount", "Home"))";
        app.Urls.totalCategoryCountUrl = "@(Url.Action("TotalCategoryCount", "Home"))";
        app.Urls.totalUserCountUrl = "@(Url.Action("TotalUserCount", "Home"))";
        app.Urls.totalViewCountUrl = "@(Url.Action("TotalViewCount", "Home"))";
    </script>
}